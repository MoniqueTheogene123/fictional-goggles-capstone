<h1>
  Industry #<%= @the_industry.id %> details
</h1>

<article>
  <div>
    <a href="/industries">
      Go back
    </a>
  </div>

  <div>
    <a href="/delete_industry/<%= @the_industry.id %>">
      Delete industry
    </a>
  </div>
  <dl>
    <dt>
      Skills
    </dt>
    <dd>
      <%= @the_industry.skills_id %>
    </dd>

    <dt>
      Created at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_industry.created_at) %> ago
    </dd>

    <dt>
      Updated at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_industry.updated_at) %> ago
    </dd>
  </dl>
</article>

<hr>


<article>
  <header>
    <h2>
      Edit industry
    </h2>
  </header>

  <form action="/modify_industry/<%= @the_industry.id %>"  method="post" >
    <div>
      <label for="skills_id_box">
        Skills
      </label>

      <input type="text" id="skills_id_box" name="query_skills_id" value="<%= @the_industry.skills_id %>">
    </div>

    <button type="submit">
      Update industry
    </button>
  </form>
</article>

<hr>
